n=int(input("enter rows:"))
for i in range(0,n):
    for j in range(0,n-i):
      print("*",end=" ")
    for j in range(0,2*i):
      print(" ",end=" ")
    for j in range(0,n-i):
      print("*",end=" ")
    print()
a=2*n-2
for i in range(0,n):
   for j in range(0,i+1):
      print("*",end=" ")
   for j in range(0,a):
      print(" ",end=" ")
   for j in range(0,i+1):
      print("*",end=" ")
   a=a-2
   print()